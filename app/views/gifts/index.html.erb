<h2>Add a new Gift to the Registry</h2>

<%= form_for @gift do |f| %>
  <div class="field">
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %><br/>
    </p>

    <p>
      <%= f.label :purchased %>
      <%= f.check_box(:purchased) %><br/>
    </p>
    <p>
      <%= f.label :url %>
      <%= f.text_field :url %><br/>
    </p>

    <%= f.submit "Add to list" %>
  </div>
<% end %>
