<div class="page-header text-center">
  <div class="well">
    <%= render 'layouts/header' %>
    <%= render 'layouts/navbar' %>
    <div class="row">
      <div class="col-xs-12 col-md-4 registry-gift">
        <a href="http://www1.macys.com/registry/wedding/guest/?registryId=6469354">
          <%= image_tag "macys.png", class: "med-img" %>
        </a>
      </div>
      <div class="col-xs-12 col-md-4 registry-gift">
        <a href="#">
          <%# image_tag "macys.png", class: "med-img" %>
        </a>
      </div>
      <div class="col-xs-12 col-md-4 registry-gift">
        <a href="#">
          <%# image_tag "macys.png", class: "med-img" %>
        </a>
      </div>
      <div class="col-xs-12 col-md-12 registry-gift">
        <div>
          <% @gifts.each do |gift| %>
            <div class="row col-xs-12 col-md-4 registry-gift">
              <!-- show a gift using html elements -->
              <%= link_to gift.name, gift.url, class: "col-md-6 hang-left" %>

              <%= link_to image_tag(gift.image.url(:medium), class: "col-md-6 hang-left"), gift.url %>

              <% if !gift.purchased? %>
                <%= form_for gift do |f| %>
                  <%= f.submit "Mark as Purchased", class: "col-md-6 pull-right" %>
                  <%= f.hidden_field :purchased, :as => :hidden, :value => "true", class: "pull-left" %>
                  <!-- , confirm: “Continue to  mark this gift as purchased. Thank you so much!”  -->
                <% end %>
              <% else %>
                <p>Gift Purchased</p>
                <%= form_for gift do |f| %>
                  <%= f.hidden_field :purchased, :as => :hidden, :value => "false", class: "pull-left" %>
                  <%= f.submit "Mark as Not Purchased", class: "pull-right" %>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

